generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model SignosVitales {
  id          Int      @id @default(autoincrement()) @map("id")
  presion     Float    @map("presion")
  horario     DateTime @default(now()) @map("horario")
  resultado   Resultado? 

  @@map("SignosVitales")//nombre base de datos
  @@unique([presion, horario]) // Asegura que la combinación de presion y horario sea única
}

model Resultado {
  id             Int   @id @default(autoincrement()) @map("id")
  id_signo_vital Int   @unique @map("id_signo_vital")
  resultado      Float @map("resultado")

  signoVital SignosVitales @relation(fields: [id_signo_vital], references: [id])

  @@map("Resultado")
}
