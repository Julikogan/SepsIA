generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model SignosVitales {
  id          Int      @id @default(autoincrement())
  presion     Float    
  horario     DateTime @default(now())
  
  resultado   Resultado[] 
}

model Resultado {
  id             Int   @id @default(autoincrement())
  resultado      Float 

  signoVital SignosVitales @relation(fields: [id_signo_vital], references: [id])
  id_signo_vital Int
}
